{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": true,
    "paths": {
      "@entities/*": ["entities/*"],
      "@helpers/*": ["helpers/*"],
      "@types/*": ["types/*"],
      "@middlewares/*": ["middlewares/*"],
      "@configs/*": ["configs/*"],
      "@acl/*": ["admin/acl/*"],
      "@adminEntities/*": ["admin/entities/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "include": ["src/**/*.ts", "src/types/types.ts", "src/types/sf-router.delegates.ts"],
  "exclude": ["node_modules"]
}
